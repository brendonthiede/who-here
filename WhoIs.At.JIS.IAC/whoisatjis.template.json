{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "jisEnvironment": {
      "type": "string",
      "allowedValues": [
        "demo"
      ],
      "metadata": {
        "description": "The JIS environment being deployed to."
      }
    },
    "appServiceShortName": {
      "type": "string",
      "defaultValue": "whoisatjis"
    }
  },
  "variables": {
    "location": "[resourceGroup().location]",
    "appServiceName": "[concat(parameters('appServiceShortName'), parameters('jisEnvironment'))]"
  },
  "resources": [
    {
      "apiVersion": "2017-05-10",
      "name": "appServiceLinkedTemplate",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://jisarmbasetemplates.blob.core.windows.net/armtemplates/jisAppService.basetemplate.json",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "jisEnvironment": {
            "value": "[parameters('jisEnvironment')]"
          },
          "appServiceShortName": {
            "value": "[parameters('appServiceShortName')]"
          },
          "identityType": {
            "value": "SystemAssigned"
          }
        }
      },
      "dependsOn": []
    },
    {
      "name": "[concat(variables('appServiceName'), '/appsettings')]",
      "type": "Microsoft.Web/sites/config",
      "location": "[variables('location')]",
      "apiVersion": "2016-08-01",
      "tags": {
        "displayName": "AppService",
        "hidden-related": "[concat(subscription().id, '/resourceGroups/jiscommon-', parameters('jisEnvironment'), '-rg/providers/Microsoft.Web/serverfarms/jiscommon-', parameters('jisEnvironment'), '-asplan\": \"Resource\"')]"
      },
      "properties": {
        "ASPNETCORE_ENVIRONMENT": "Production",
        "MSDEPLOY_RENAME_LOCKED_FILES": "1"
      },
      "dependsOn": [
        "appServiceLinkedTemplate"
      ]
    }
  ],
  "outputs": {}
}